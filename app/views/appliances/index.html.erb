<%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
  <input type=submit value='logout'>
<% end %>

<h1> Appliances Available for Rent! </h1>

<h4>Search For Appliances</h4>
  <%= form_tag(appliances_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
    <% end %>

<ol type = "1">
<% @appliances.each do |appliance| %>
   <li><%= link_to appliance.appliance_name, appliance %>
   <p> $ <%= appliance.daily_rate %> per day </p> </li>
   <% if appliance.avatar.attached? %>   
   <image src="<%=(url_for(appliance.avatar))%>">
   <% end %>
   <% end %>
</ol>


